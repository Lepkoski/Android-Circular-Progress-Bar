<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.serasaexperian.android.widget.circularprogressbar.MainActivity"
    android:weightSum="1">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Hello World!" />

    <br.com.serasaexperian.android.widget.circularprogressbar.CircularProgressBar
        android:layout_width="257dp"
        android:layout_height="313dp"
        custom:startingDegree="45"
        custom:horizontalAlignment="left"
        custom:verticalAlignment="top"
        android:background="@android:color/darker_gray"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:paddingBottom="50dp"
        android:paddingTop="50dp" />
</LinearLayout>
